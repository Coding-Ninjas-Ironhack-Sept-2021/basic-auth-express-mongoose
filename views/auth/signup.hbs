<div id="form">
  <h2>Signup</h2>
  <form action="/signup" method="POST">

    {{#if errorMessage}}
      <p class="error">
        {{errorMessage}}
      </p>
    {{/if}}


    <label> Username
      <input type="text" name="username" placeholder="ironhacker" required />
    </label>

    <label> Email
      <input type="email" name="email" placeholder="rockstar@ironhack.com" required />
    </label>

    <label> Password
      <input type="password" name="password" placeholder="********" required />
    </label>

    <button type="submit">Create account</button>

  </form>
</div>
