<div id="form">
  <h2>Login</h2>

  <form action="/login" method="POST">

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}

    <label> Email
      <input type="email" name="email" placeholder="rockstar@ironhack.com" />
    </label>

    <label>Password
      <input type="password" name="password" placeholder="********" />
    </label>

    <button type="submit">Login</button>

  </form>
</div>
